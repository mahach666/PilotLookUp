<UserControl x:Class="PilotLookUp.View.CastomUIElemens.SearchResBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PilotLookUp.View.CastomUIElemens"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Height="80"
             MinHeight="80"
             MaxHeight="80">

    <!-- Экспорт словарей ресурсов Pilot -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\..\Resources\StyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Rectangle Margin="5,5,5,5"
                   Stroke="#eae3ed"
                   StrokeThickness="50" />


        <Label Content="{Binding Name}"
               Margin="60,10,100,0"
               VerticalAlignment="Top"
               FontSize="15" />
        <Label Content="{Binding Id}"
               Margin="60,0,100,10"
               VerticalAlignment="Bottom"
               FontSize="15" />
        <Button HorizontalAlignment="Right"
                Margin="0,20,60,0"
                VerticalAlignment="Top"
                Height="40"
                Width="40"
                Background="#86609B"
                MinWidth="40"
                MinHeight="40"
                MaxWidth="40"
                MaxHeight="40"
                Command="{Binding GoPageCommand}">
            <Button.Style>
                <Style BasedOn="{StaticResource ImageButtonStyle}">
                    <Style.Triggers>
                        <Trigger Property="UIElement.IsEnabled"
                                 Value="True">
                            <Setter Property="ContentControl.Content">
                                <Setter.Value>
                                    <Image Source="..\..\Resources\UI\search.png"
                                           Height="20"
                                           Width="20"
                                           IsEnabled="False" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Button Margin="0,20,20,0"
                VerticalAlignment="Top"
                Height="40"
                Background="#86609B"
                HorizontalAlignment="Right"
                Width="40"
                MinWidth="40"
                MinHeight="40"
                MaxWidth="40"
                MaxHeight="40"
                Visibility="{Binding CanGo}"
                Command="{Binding GoObjCommand}">
            <Button.Style>
                <Style BasedOn="{StaticResource ImageButtonStyle}">
                    <Style.Triggers>
                        <Trigger Property="UIElement.IsEnabled"
                                 Value="True">
                            <Setter Property="ContentControl.Content">
                                <Setter.Value>
                                    <Image Source="..\..\Resources\UI\goTo.png"
                                           Height="20"
                                           Width="20"
                                           IsEnabled="False" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Image HorizontalAlignment="Left"
               Margin="20,20,0,20"
               Width="40"
               Height="40"
               Source="{Binding TypeIcon}" />


    </Grid>
</UserControl>

<UserControl x:Class="PilotLookUp.View.UserControls.SearchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PilotLookUp.View.UserControls"
             xmlns:views="clr-namespace:PilotLookUp.View.CastomUIElemens"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.InputBindings>
        <KeyBinding Gesture="Enter"
                    Command="{Binding SearchCommand}" />
    </UserControl.InputBindings>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\..\..\Resources\StyleDictionary.xaml" />
                <ResourceDictionary Source="..\..\..\Resources\VMMap.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBox Margin="20,30,60,30"
                     Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="20"
                     HorizontalScrollBarVisibility="Hidden"
                     AcceptsReturn="True"
                     TextWrapping="NoWrap">
                <TextBox.InputBindings>
                    <KeyBinding Gesture="Enter"
                                Command="{Binding SearchCommand}" />
                </TextBox.InputBindings>
            </TextBox>
            <Label Margin="20,30,60,30"
                     FontSize="20"                    
                     IsEnabled="False"
                     Content="Введите Id или GUID"
                     Visibility="{Binding PromtVisibility}"
                     Foreground ="Gray"
                     IsHitTestVisible ="False">
            </Label>
            <Button                    Command="{Binding SearchCommand}"
                                       Margin="20,30,20,30"
                                       HorizontalAlignment="Right"
                                       Style="{StaticResource CastomImageButton}"
                                       Content="..\Resources\UI\search.png" />
        </Grid>

        <Grid Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Result}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

    </Grid>
</UserControl>
